# ============================================
# UHI-LST Backend Environment Configuration
# ============================================
# Copy this file to .env and customize values

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
RELOAD=true

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# File Upload Limits
MAX_FILE_SIZE_MB=500
MAX_TOTAL_UPLOAD_MB=4000

# Processing Configuration
TEMP_DIR=
NODATA_VALUE=-9999.0
MAX_HEATMAP_POINTS=5000
HEATMAP_SAMPLE_STEP=10

# Landsat 8/9 Band 10 Default Coefficients
# These can be overridden per-request
# Get actual values from the MTL metadata file
RADIANCE_MULT_BAND_10=3.342e-4
RADIANCE_ADD_BAND_10=0.1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(levelname)s - %(message)s

# Optional: Database for job tracking (future)
# DATABASE_URL=sqlite:///./uhi_lst.db

# Optional: Redis for caching (future)
# REDIS_URL=redis://localhost:6379/0

# Optional: S3 for file storage (future)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_REGION=us-east-1
